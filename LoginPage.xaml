<UserControl x:Class="sad.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sad"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            

            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="15" Source="imgsrc/rect1.png"/>
        <Image Grid.Column="2" Grid.Row="0" Grid.RowSpan="15" Source="imgsrc/rect1-1.png"/>

        <Image Grid.Row="1" Grid.Column="1" Height="120" Width="120"/>
        <Label Grid.Row="3" Grid.Column="1" Content="Title" Foreground="#FF572C5C" FontSize="96" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Label Grid.Row="5" Grid.Column="1" Content="Вход" Foreground="#FF572C5C" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label Grid.Row="7" Grid.Column="1" Content="E-mail:" Foreground="#FF572C5C" FontSize="56" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="90,0,0,0"/>
        <TextBox Grid.Row="7" Grid.Column="1" Height="80" Width="440" HorizontalAlignment="Right" Margin="0,0,50,0"/>

        <Label Grid.Row="9" Grid.Column="1" Content="Парола:" Foreground="#FF572C5C" FontSize="56" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="90,0,0,0"/>
        <TextBox Grid.Row="9" Grid.Column="1" Height="80" Width="440" HorizontalAlignment="Right" Margin="0,0,50,0"/>

        <Label Grid.Row="11" Grid.Column="1" Content="Нямаш акаунт? Регистритай се тук." Foreground="#270c46" FontSize="32" HorizontalAlignment="Center" MouseLeftButtonUp="Label_MouseLeftButtonUp"/>
        <Button Grid.Row="13" Grid.Column="1" Content="Login" FontSize="40" Height="50" Width="240"/>
    </Grid>
</UserControl>
